{
  "name": "zssn-api",
  "version": "1.0.0",
  "description": "TRZ (The Resident Zombie) - Backend",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production LOGGER_ENABLE=1 npm run build && node dist/src/index.js",
    "dev": "NODE_ENV=development LOGGER_ENABLE=0 ts-node-dev --transpile-only --ignore-watch node_modules src/index.ts",
    "lint:check": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "LOGGER_ENABLE=0 jest --passWithNoTests --runInBand",
    "test:unit": "npm run test -- -c jest-unitary-config.js",
    "test:coverage": "npm run test:unit -- --coverage",
    "typeorm:cli": "ts-node-dev ./node_modules/typeorm/cli.js --config src/config/database/ormconfig.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nelsonwenner/zssn-api.git"
  },
  "author": "Nelson Wenner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nelsonwenner/zssn-api/issues"
  },
  "homepage": "https://github.com/nelsonwenner/zssn-api#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "faker": "^5.1.0",
    "module-alias": "^2.2.2",
    "pg": "^8.5.1",
    "random": "^2.2.0",
    "supertest": "^6.0.1",
    "swagger-ui-express": "^4.1.4",
    "express-openapi-validator": "^3.16.1",
    "typeorm": "^0.2.29",
    "uuidv4": "^6.2.5",
    "yup": "0.28.1",
    "pino": "^6.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^7.2.5",
    "@types/express": "^4.17.9",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.9",
    "@types/random": "^2.1.1",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yup": "0.26.32",
    "@types/express-pino-logger": "^4.0.2",
    "@types/pino": "^6.3.3",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  }
}
